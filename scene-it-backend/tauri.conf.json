{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scene-it-backend",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../scene-it-ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm --prefix ../scene-it-ui run dev",
    "beforeBuildCommand": "npm --prefix ../scene-it-ui run build"
  },
  "app": {
    "windows": [
      {
        "title": "Scene It!",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
